#      echo "Should start_agent for SSH first"
#      # exit 1
#      fi
#      ssh-add -l ||  echo "*** WARNING *** Please add your ssh keys ssh-add"
#      fi


#mongrel_rails start -e production -p 3000 --log log\production.log
